# https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties
# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 119
trim_trailing_whitespace = true

[*.go]
indent_style = tab
max_line_length = 119

[*.{md,rst}]
max_line_length = 119

[*.py]
indent_style = space
indent_size = 4
max_line_length = 119

[*.{json,yaml,yml}]
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 119

[Vagrantfile]
indent_size = 4
indent_style = space

[{Makefile,Makefile.*,gitconfig,.gitconfig}]
indent_style = tab

[*.properties]
end_of_line = lf
