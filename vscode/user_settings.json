{
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": true,
    "editor.autoIndent": "advanced",
    "editor.cursorBlinking": "blink",
    "editor.cursorStyle": "line",
    // https://github.com/adobe-fonts/source-code-pro
    // https://www.jetbrains.com/lp/mono/
    "editor.fontFamily": "Source Code Pro, JetBrains Mono, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": false,
    "editor.fontSize": 16,
    "editor.guides.indentation": true,
    "editor.insertSpaces": true,
    "editor.minimap.enabled": true,
    "editor.minimap.showSlider": "always",
    "editor.renderControlCharacters": true,
    "editor.renderIndentGuides": true,
    "editor.renderWhitespace": "all",
    "editor.rulers": [79, 119],
    "editor.tabSize": 4,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 119,
    "editor.wrappingIndent": "indent",
    "extensions.autoCheckUpdates": true,
    "files.associations": {
        "*.sls": "jinja",
        ".bashrc": "shellscript",
        "bashrc": "shellscript",
        ".bash_profile": "shellscript",
        "bash_profile": "shellscript",
        ".bash_aliases": "shellscript",
        "bash_aliases": "shellscript",
        ".editorconfig": "ini",
        "editorconfig": "ini",
        ".envrc": "shellscript",
        "Makefile.*": "makefile"
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 7000,
    "files.eol": "\n",
    "files.hotExit": "onExit",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.enabled": true,
    "go.formatTool": "gofmt", // https://github.com/Microsoft/vscode-go/issues/624#issuecomment-261696096
    "python.formatting.provider": "black",
    "python.linting.lintOnSave": true,
    "python.linting.pylintEnabled": true,
    "shellcheck.enable": true,
    "telemetry.telemetryLevel": "off",
    "terminal.external.osxExec": "iTerm.app",
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Visual Studio Dark",
    "workbench.editor.closeOnFileDelete": false,
    "workbench.iconTheme": "vs-seti",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.wordWrap": "off",
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": false
        }
    },
    "[shellscript]": {
        "editor.rulers": [119],
        "editor.wordWrap": "off"
    },
    "[go]": {
        "editor.formatOnSave": true,
        "editor.wordWrap": "off"
    },
    "[java]": {
        "editor.rulers": [79, 119],
        "editor.wordWrap": "off"
    },
    "[terraform]": {
        "editor.formatOnSave": true,
        "editor.rulers": [119]
    },
    "[json]": {
        "editor.rulers": [119],
        "editor.tabSize": 4,
        "editor.wordWrap": "off"
    },
    "[yaml]": {
        "editor.rulers": [119],
        "editor.tabSize": 4,
        "editor.wordWrap": "off"
    }
}
